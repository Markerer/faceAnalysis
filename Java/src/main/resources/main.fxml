<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox alignment="BASELINE_CENTER" prefHeight="900.0" prefWidth="1400.0"
 xmlns="http://javafx.com/javafx/8.0.171"
 xmlns:fx="http://javafx.com/fxml/1"
 fx:controller="fxmlController.MainController">
 
  <children>
      <fx:include source="menuBar.fxml" fx:id="menu" />
      <ImageView fx:id="image" fitHeight="300.0" fitWidth="450.0" pickOnBounds="true" preserveRatio="true" />
      <Label fx:id="description" alignment="CENTER" contentDisplay="CENTER" textAlignment="CENTER" />
      <HBox alignment="CENTER" prefHeight="50.0" prefWidth="200.0">
         <children>
            <Button fx:id="imageChooserButton" alignment="CENTER" mnemonicParsing="false" onAction="#onImageChooserButtonPressed" text="Kép kiválasztása" textAlignment="CENTER">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
            </Button>
            <Button contentDisplay="CENTER" mnemonicParsing="false" onAction="#onAnalyzeButtonPressed" text="Kiértékelés" textAlignment="CENTER">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
  </children>
</VBox>
